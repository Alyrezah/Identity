@using Identity.Core.Application.DTOs.Account
@model AddRoleToUserDto
@{
    ViewData["Title"] = "ManageUserRoles";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}


<h1>Manage User Roles</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ManageUserRoles">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" value="@Model.UserId" />

            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                if (Model.Roles[i].IsInRole)
                {
                    <div class="form-group">
                        <label class="control-label">@Model.Roles[i].RoleName</label>
                        <input hidden asp-for="@Model.Roles[i].RoleName" />
                        <input hidden asp-for="@Model.Roles[i].IsInRole" />
                        <input type="checkbox" asp-for="@Model.Roles[i].IsSelected" checked />
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <label class="control-label">@Model.Roles[i].RoleName</label>
                        <input hidden asp-for="@Model.Roles[i].RoleName" />
                        <input hidden asp-for="@Model.Roles[i].IsInRole" />
                        <input type="checkbox" asp-for="@Model.Roles[i].IsSelected" />
                    </div>
                }
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
