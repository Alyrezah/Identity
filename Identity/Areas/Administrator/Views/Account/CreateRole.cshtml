@model Identity.Core.Application.DTOs.Account.CreateRoleDto

@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<h1>CreateRole</h1>

<h4>CreateRoleDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            @for (int i = 0; i < Model.SitePath.Count; i++)
            {
                <div class="form-group">
                    <label class="control-label">@(Model.SitePath[i].AreaName ?? "NoArea") - @Model.SitePath[i].ControllerName - @Model.SitePath[i].ActionName</label>
                    <input hidden asp-for="@Model.SitePath[i].AreaName" />
                    <input hidden asp-for="@Model.SitePath[i].ControllerName" />
                    <input hidden asp-for="@Model.SitePath[i].ActionName" />
                    <input type="checkbox" asp-for="@Model.SitePath[i].IsSelected" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

