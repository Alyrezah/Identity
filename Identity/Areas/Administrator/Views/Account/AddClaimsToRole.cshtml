@using Identity.Core.Application.DTOs.Account
@model ManageRoleClaimsDto
@{
    ViewData["Title"] = "AddClaimsToRole";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}


<h1>Add Claims To Role</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddClaimsToRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoleId" value="@Model.RoleId" />

            @for (int i = 0; i < Model._Claims.Count; i++)
            {
                <div class="form-group">
                    <label class="control-label">@Model._Claims[i].ClaimType</label>
                    <input hidden asp-for="@Model._Claims[i].ClaimType" />
                    <input type="checkbox" asp-for="@Model._Claims[i].IsSelected" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Roles">Back to List</a>
</div>


