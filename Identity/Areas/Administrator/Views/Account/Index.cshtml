@model IEnumerable<Identity.Core.Application.DTOs.Account.AccountDto>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<h1>Users</h1>

<p>
    <a asp-action="Roles">Roles</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                @if (item.PhoneNumber != null)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                }
                else
                {
                    <td>
                        -
                    </td>
                }
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("ManageUserRoles", "ManageUserRoles", new { id = item.Id }) |
                    @Html.ActionLink("AddClaims", "AddClaims", new { id = item.Id }) |
                    @Html.ActionLink("RemoveClaims", "RemoveClaims", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
