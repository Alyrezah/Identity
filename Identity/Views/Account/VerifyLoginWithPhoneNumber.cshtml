            <div class="card-body p-5">
                <h2 class="text-uppercase text-center mb-5">Login with phone nubmber</h2>

                <form asp-action="VerifyLoginWithPhoneNumber" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div data-mdb-input-init="" class="form-outline mb-4">
                        <input asp-for="TotpCode" required class="form-control form-control-lg">
                        <label class="form-label" asp-for="TotpCode">Code</label>
                    </div>

                    @* <div class="form-check d-flex justify-content-center mb-5">
